{
  "name": "cryptrapay-app",
  "version": "1.0.0",
  "description": "Cryptrapay React Native Mobile Apps - Merchant + User with NFC",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace CryptrapayApp.xcworkspace -scheme CryptrapayApp -configuration Release -destination generic/platform=iOS -archivePath CryptrapayApp.xcarchive archive"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "react-native-screens": "^3.27.0",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-vector-icons": "^10.0.3",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-nfc-manager": "^3.14.13",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-camera": "^4.2.1",
    "react-native-keychain": "^8.1.3",
    "react-native-biometrics": "^3.0.1",
    "react-native-device-info": "^10.11.0",
    "react-native-async-storage": "@react-native-async-storage/async-storage",
    "react-native-paper": "^5.11.6",
    "react-native-elements": "^3.4.3",
    "react-native-toast-message": "^2.1.7",
    "react-native-permissions": "^4.1.5",
    "react-native-crypto": "^2.2.0",
    "crypto-js": "^4.2.0",
    "axios": "^1.6.2",
    "moment": "^2.29.4",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "^14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/metro-config": "^0.73.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
